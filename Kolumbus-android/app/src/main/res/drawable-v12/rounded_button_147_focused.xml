<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            
            <solid android:color="@color/rounded_stroke_focused_color" />
            
            <corners
        		android:topLeftRadius="@dimen/rounded_radius_default"
        		android:topRightRadius="0dp"
        		android:bottomLeftRadius="@dimen/rounded_radius_default"
        		android:bottomRightRadius="0dp" />
            
        </shape>
    </item>
    <item
        android:top="@dimen/rounded_stroke_focused"
        android:bottom="@dimen/rounded_stroke_focused"
        android:left="@dimen/rounded_stroke_focused"
        android:right="@dimen/rounded_stroke_focused_ingrid">
        <shape android:shape="rectangle">
            
            <solid android:color="@color/rounded_fill_color" />
            
            <corners
        		android:topLeftRadius="@dimen/rounded_radius_default"
        		android:topRightRadius="0dp"
        		android:bottomLeftRadius="@dimen/rounded_radius_default"
        		android:bottomRightRadius="0dp" />
            
            <padding
        		android:left="@dimen/rounded_padding_left"
        		android:right="@dimen/rounded_padding_right" />
            
        </shape>
    </item>
</layer-list>
