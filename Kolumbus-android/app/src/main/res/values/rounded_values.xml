<resources>
    <!-- Customization goes here -->
    
    <!-- Colors -->
    <color name="rounded_fill_color">#ffffff</color> <!-- General fill color -->
    <color name="rounded_container_fill_color">#ffffff</color> <!-- Container fill color -->
    <color name="rounded_stroke_color">#e3e3e3</color> <!-- Edge color -->
    <color name="rounded_stroke_focused_color">#e3e3e3</color> <!-- Focused edge color -->
    <color name="rounded_pressed_color">#e3e3e3</color> <!-- Pressed color -->
    <color name="rounded_disabled_color">#e3e3e3</color> <!-- Disabled color -->
    <color name="rounded_toggled_color">#ff4444</color> <!-- Toggled color -->
    <color name="rounded_text_default">#ff4444</color> <!-- Default text color -->
    <color name="rounded_text_focused">#000000</color> <!-- Focused text color -->
    <color name="rounded_text_pressed">#99cc00</color> <!-- Pressed text color -->
    <color name="rounded_text_disabled">#ffffff</color> <!-- Disabled text color -->
    <color name="rounded_text_disabled_focused">#ffffff</color> <!-- Disabled focused text color -->
    <color name="rounded_text_toggled">#ffffff</color> <!-- Toggled text color -->
    
    <!-- Radius -->
    <dimen name="rounded_radius_default">20dp</dimen> <!-- Default radius -->
    <dimen name="rounded_radius_container">30dp</dimen> <!-- Container radius - should be bigger than default -->
    
    <!-- Stroke -->
    <dimen name="rounded_stroke_normal">1dp</dimen> <!-- Edge width -->
    <dimen name="rounded_stroke_normal_half">0.5dp</dimen> <!-- Half the value above -->
    <dimen name="rounded_stroke_focused">2dp</dimen> <!-- Focused width -->
    <dimen name="rounded_stroke_focused_ingrid">1.5dp</dimen> <!-- Focused width minus half value -->
    
    <!-- Padding -->
    <dimen name="rounded_padding_left">30dp</dimen> <!-- Margin left -->
    <dimen name="rounded_padding_right">30dp</dimen> <!-- Margin right -->
    
</resources>
