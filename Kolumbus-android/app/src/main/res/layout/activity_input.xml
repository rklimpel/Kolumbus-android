<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.kolumbus.jugendhackt.kolumbus.Input">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btn_inputlos">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ort / Stadt"
            android:id="@+id/btn_Location"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Startdatum"
            android:id="@+id/btn_StartDate"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_Location" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enddatum"
            android:id="@+id/btn_EndDate"
            android:layout_below="@+id/btn_StartDate"
            android:layout_alignLeft="@+id/btn_StartDate"
            android:layout_alignStart="@+id/btn_StartDate"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vorherige Besuche"
            android:id="@+id/btn_VisitCount"
            android:layout_below="@+id/btn_EndDate"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget"
            android:id="@+id/btn_BudgetClass"
            android:layout_below="@+id/btn_VisitCount"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IntensitÃ¤t"
            android:id="@+id/btn_VisitIntensity"
            android:layout_below="@+id/btn_BudgetClass"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circlebutton"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_inputlos"
        android:background="@drawable/suggestions_circlebutton"
        android:text="Fertig"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
