<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kolumbus.jugendhackt.kolumbus.Suggestions">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sug_continue" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/sug_continue"
        android:background="@drawable/suggestions_circlebutton"
        android:text="Plane meinen Tag!"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
